 <br>
<table class="table table-striped table-hover">
  <thead  >
    <tr class="table-dark">
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <%if friend.user == current_user%>
      <tr>
        <td><%= friend.First_name %></td>
        <td><%= friend.Last_name %></td>
        <td><%= friend.Email %></td>
        <td><%= friend.phone_no %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path , class:"btn btn-secondary"%>
